<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_main</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Header" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/_23sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SubHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:fontFamily">@font/rubik_500</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ShapeAllBorder" parent="">
        <item name="cornerSizeBottomLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
    </style>
    <style name="button" parent="">
        <item name="background">@drawable/white_background</item>
        <item name="backgroundTint">@color/main_color</item>
        <item name="android:layout_marginBottom">@dimen/_32sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>


    <style name="EditTextHeader" parent="">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="fontFamily">@font/rubik_500</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">@dimen/_15sdp</item>
        <item name="android:textColor">@color/text_date</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="BackTextViewHeader" parent="">
        <item name="drawableLeftCompat">@drawable/ic_stroke</item>
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="fontFamily">@font/rubik_500</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextViewHeader" parent="">
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="fontFamily">@font/rubik_500</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:textColor">#31384F</item>
    </style>

    <style name="ProfileToolBarEditText" parent="">
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ProfileOneEditText" parent="">
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>
    <style name="ProfileSecondEditText" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>
    <style name="ProfileView" parent="">
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_17sdp</item>
    </style>
    <style name="EditTextMain" parent="">
        <item name="android:layout_marginStart">@dimen/_26sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:padding">@dimen/_16sdp</item>
    </style>
    <style name="LinearLayoutSchedule" parent="">
        <item name="android:layout_marginStart">@dimen/_26sdp</item>
        <item name="android:layout_marginEnd">@dimen/_25sdp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="EditTextSchedule" parent="">
        <item name="android:padding">@dimen/_16sdp</item>
        <item name="drawableRightCompat">@drawable/ic_bottom</item>
    </style>
    <style name="TitleNews" parent="">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_17sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="DefaultTextInputEditTextStyle" parent="">
        <item name="android:fontFamily">@font/rubik_500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/text_input_bg</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

</resources>